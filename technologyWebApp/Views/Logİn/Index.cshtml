
@{
    Layout = null;
}




<!DOCTYPE html>
<html lang="en" data-bs-theme="auto">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
   
    <title>Tech MADT Giriş</title>
   
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/sign-in.css" rel="stylesheet" />
</head>
<body class="d-flex align-items-center py-4 bg-body-tertiary">
       <main class="form-signin w-100 m-auto">
        @using (Html.BeginForm("Index", "Login", FormMethod.Post))
        {
            <h1 class="h3 mb-3 fw-normal">Tech MADT Giriş Sayfası</h1>
            <br/>
            <div class="form-floating"> <input type="text" class="form-control" id="userName" name="userName" >
           <label for="userName">Kullanıcı Adınız</label> </div>
            <br/>
            <div class="form-floating"> <input type="password" class="form-control" id="userPassword" name="userPassword">
           <label for="userPassword">Parola</label> 
                </div> 
            <br/>
            <button class="btn btn-primary w-100 py-2" type="submit">Giriş</button> 

            <br/><br/>
            <u>@ViewBag.mesaj</u>
        }
    </main>
    
</body>
</html>